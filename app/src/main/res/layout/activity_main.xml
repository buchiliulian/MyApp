<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText"
    android:background="@drawable/background_main"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户登录"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="40sp"
        android:gravity="center"
        android:textColor="#030303" />

    <TextView
        android:id="@+id/textView_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入用户名："
        android:layout_marginLeft="15dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textColor="#030303" />

    <!--输入框-->
    <EditText
        android:id="@+id/editText_inputname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户名"
        android:layout_marginLeft="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入密码："
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:textColor="#030303" />

    <EditText
        android:id="@+id/editText_inputpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginLeft="15dp"
        android:hint="密    码"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/btn_forgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:text="忘记密码?" />

        <CheckBox
            android:id="@+id/checkBox_reme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="180dp"
            android:text="记住密码"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
    <android.widget.Button
        android:id="@+id/button_login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="登     录"
        android:textSize="25sp"
        android:background="@drawable/login1_2"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
    <android.widget.Button
        android:id="@+id/button_cancle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="取     消"
        android:textSize="25sp"
        android:background="@drawable/login1_2"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他登录方式"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:paddingHorizontal="10dp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/black" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:ignore="ExtraText"
        android:layout_marginTop="15dp"
        tools:context=".MainActivity">

        <ImageButton
            android:id="@+id/btn_qq"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="9"
            android:layout_margin="40sp"
            android:background="@drawable/qq" />

        <ImageButton
            android:id="@+id/btn_weixin"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="9"
            android:layout_margin="40sp"
            android:background="@drawable/weixin" />

        <ImageButton
            android:id="@+id/btn_weibo"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:layout_margin="40sp"
            android:background="@drawable/weibo" />

    </LinearLayout>

</LinearLayout>