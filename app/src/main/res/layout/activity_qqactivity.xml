<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QQActivity">

    <ImageView
        android:id="@+id/qq"
        android:layout_marginTop="50dp"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_weight="30"
        android:layout_gravity="center"
        android:src="@drawable/qq" />

    <EditText
        android:id="@+id/qq_name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/qq_edit"
        android:gravity="center"
        android:hint="输入账号"
        android:inputType="number" />

    <EditText
        android:id="@+id/qq_password"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:background="@drawable/qq_edit"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:layout_gravity="center" />

    <ImageButton
        android:id="@+id/qq_login"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/qq_go" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal">
        <android.widget.Button
            android:id="@+id/btn_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="手机号登陆"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/qq_btn"/>
        <View
            android:layout_width="2dip"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="#E8E8F2" />
        <android.widget.Button
            android:id="@+id/btn_retrieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="找回密码"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/qq_btn"/>
        <View
            android:layout_width="2dip"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="#E8E8F2" />
        <android.widget.Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="新用户注册"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/qq_btn"/>
        <View
            android:layout_width="2dip"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="#E8E8F2" />
        <android.widget.Button
            android:id="@+id/btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/qq_btn"/>
    </LinearLayout>
</LinearLayout>